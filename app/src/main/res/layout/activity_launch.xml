<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblLaunchGreeting"
        android:text="Welcome"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchLogin"
        android:text="Login"
        android:background="@drawable/btn_round"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/lblLaunchGreeting"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:onClick="onClickBtnLg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchRegister"
        android:text="Register"
        android:background="@drawable/btn_round"
        android:paddingHorizontal="25dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/lblLaunchGreeting"
        app:layout_constraintStart_toEndOf="@id/btnLaunchLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:onClick="onClickBtnRegist"/>

</androidx.constraintlayout.widget.ConstraintLayout>